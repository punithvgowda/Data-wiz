   <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DATAWIZ Club Registration</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    body {
      background-color: #111; /* Dark background */
      color: #fff; /* White text */
    }
    .form-control, .form-check-label {
      color: #fff; 
    }
    .form-control:focus {
      color: #fff;
      background-color: #222;
      border-color: #6f42c1; /* purple accent */
      box-shadow: none;
    }
    .form-check-input {
      background-color: #222;
      border-color: #6f42c1;
    }
    .form-check-input:checked {
      background-color: #6f42c1;
      border-color: #6f42c1;
    }
    .container {
      max-width: 600px;
      margin-top: 50px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="mb-4 text-center">DATAWIZ Club Registration</h2>
    <form id="registrationForm" action="/register" method="post" class="needs-validation"  novalidate>
      
      <!-- Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter your name" name="name" required>
        <div class="invalid-feedback">Please enter your name.</div>
      </div>

      <!-- USN -->
      <div class="mb-3">
        <label for="usn" class="form-label">USN</label>
        <input type="text" class="form-control" id="usn" placeholder="Enter your USN" name="usn" required>
        <div class="invalid-feedback">Please enter your USN.</div>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" placeholder="Enter your email" name="email"  required>
        <div class="invalid-feedback">Please enter a valid email.</div>
      </div>

      <!-- Year (radio buttons) -->
      <div class="mb-3">
        <label class="form-label">Year</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="year" id="year1" value="1" required>
          <label class="form-check-label" for="year1">1</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="year" id="year2" value="2" required>
          <label class="form-check-label" for="year2">2</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="year" id="year3" value="3" required>
          <label class="form-check-label" for="year3">3</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="year" id="year4" value="4" required>
          <label class="form-check-label" for="year4">4</label>
        </div>
        <div class="invalid-feedback">Please select your year.</div>
      </div>

      <!-- Domain (multiple checkboxes) -->
      <div class="mb-3">
        <label class="form-label">Domain (Select one or more)</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="domain" id="tech" value="Tech">
          <label class="form-check-label" for="tech">Tech</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="domain" id="media" value="Media">
          <label class="form-check-label" for="media">Media</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="domain" id="event" value="Event Management">
          <label class="form-check-label" for="event">Event Management</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="domain" id="pr" value="PR and Marketing">
          <label class="form-check-label" for="pr">PR and Marketing</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="domain" id="doc" value="Documentation">
          <label class="form-check-label" for="doc">Documentation</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="domain" id="design" value="Design">
          <label class="form-check-label" for="design">Design</label>
        </div>
      </div>

      <!-- Contact Number -->
      <div class="mb-3">
        <label for="contact" class="form-label">Contact Number</label>
        <input type="tel" class="form-control" id="contact" placeholder="Enter your contact number" pattern="[0-9]{10}" name="contact" required>
        <div class="invalid-feedback">Please enter a valid 10-digit contact number.</div>
      </div>


      <button class="btn btn-primary w-100" type="submit">Register</button>
    </form>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


  <script>
 
    (function () {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
          // Ensure at least one checkbox is checked
          const checkboxes = form.querySelectorAll('input[name="domain"]');
          let domainChecked = Array.from(checkboxes).some(cb => cb.checked);
          if (!domainChecked) {
            event.preventDefault();
            event.stopPropagation();
            alert("Please select at least one domain.");
          }

          if (!form.checkValidity() || !domainChecked) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()
  </script>
</body>
</html>

